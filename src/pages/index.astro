---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'CXpertseg - Professional Customer Support Outsourcing Services',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot='header'>
    <Header
      {...headerData}
      isSticky
      showToggleTheme={true}
    />
  </Fragment>

  <!-- Hero Widget ******************* -->

  <Hero2
    tagline='Professional Customer Support'
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#contact',
      },
      {
        text: 'Learn More',
        href: '#features',
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'CXpertseg Customer Support Team' }}
  >
    <Fragment slot='title'>
      Transform Your Customer Experience with
      <span class='text-accent dark:text-white highlight'> Professional Support</span> Solutions
    </Fragment>

    <Fragment slot='subtitle'>
      <span class='hidden sm:inline'>
        <span class='font-semibold'>CXpertseg</span> delivers world-class customer support outsourcing services.
      </span>
      Enhance your business with our multilingual, 24/7 support teams and cutting-edge technology solutions.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id='features'
    tagline='Our Services'
    title='Why Choose CXpertseg?'
    subtitle='We deliver comprehensive customer support solutions tailored to your business needs.'
    items={[
      {
        title: '24/7 Multilingual Support',
        description:
          'Round-the-clock customer service in multiple languages, ensuring your customers receive support whenever they need it.',
        icon: 'tabler:world',
      },
      {
        title: 'Experienced Support Teams',
        description: 'Highly trained professionals with expertise in various industries and support channels.',
        icon: 'tabler:users',
      },
      {
        title: 'Omnichannel Support',
        description:
          'Seamless support across email, chat, phone, and social media platforms, providing a consistent customer experience.',
        icon: 'tabler:messages',
      },
      {
        title: 'Quality Assurance',
        description:
          'Rigorous quality monitoring and continuous improvement processes to maintain high service standards.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Custom Solutions',
        description: 'Tailored support strategies that align with your brand voice and business objectives.',
        icon: 'tabler:settings',
      },
      {
        title: 'Analytics & Reporting',
        description: 'Comprehensive performance metrics and insights to optimize your customer support operations.',
        icon: 'tabler:chart-bar',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline='Customer Success'
    title='Delivering Excellence in Customer Support'
    items={[
      {
        title: 'Global Reach',
        description:
          'Support your customers in their preferred language with our multilingual team covering major global markets.',
      },
      {
        title: 'Industry Expertise',
        description:
          'Benefit from our deep understanding of various industries and best practices in customer support.',
      },
      {
        title: 'Scalable Solutions',
        description:
          'Easily scale your support operations up or down based on your business needs and seasonal demands.',
      },
    ]}
    image={{ src: '~/assets/images/default.png', alt: 'Customer Support Team at work' }}
  >
    <Fragment slot='content'>
      <h3 class='text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2'>
        Elevate Your Customer Experience
      </h3>
      Discover how our professional support services can transform your customer interactions.
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Cost Efficiency',
        description:
          'Reduce operational costs while maintaining high-quality customer support through our efficient outsourcing solutions.',
      },
      {
        title: 'Technology Integration',
        description:
          'Seamlessly integrate with your existing systems and leverage cutting-edge support tools and technologies.',
      },
      {
        title: 'Dedicated Support',
        description:
          'Get a dedicated team that understands your business and provides consistent, high-quality support.',
      },
    ]}
    image={{ src: '~/assets/images/default.png', alt: 'Benefits of CXpertseg' }}
  >
    <Fragment slot='content'>
      Partner with us to experience the advantages of professional customer support outsourcing.
    </Fragment>
  </Content>

  <!-- Pricing Widget ******************* -->

  <Pricing
    title='Our Service Plans'
    subtitle='Choose the perfect support package for your business'
    prices={[
      {
        title: 'Basic',
        subtitle: 'Essential support for small businesses',
        price: 499,
        period: 'per agent/month',
        items: [
          'Email & Chat Support',
          '12/5 Coverage',
          'Basic Quality Monitoring',
          'Standard Response Time',
          'Monthly Reports',
        ],
        callToAction: {
          target: '_blank',
          text: 'Get Started',
          href: '#contact',
        },
      },
      {
        title: 'Professional',
        subtitle: 'Complete support solution',
        price: 799,
        period: 'per agent/month',
        items: [
          'Email, Chat & Phone Support',
          '24/7 Coverage',
          'Advanced Quality Assurance',
          'Priority Response Time',
          'Weekly Reports',
          'Dedicated Account Manager',
        ],
        callToAction: {
          target: '_blank',
          text: 'Get Started',
          href: '#contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Enterprise',
        subtitle: 'Customized enterprise solutions',
        price: 999,
        period: 'per agent/month',
        items: [
          'All Communication Channels',
          '24/7 Multilingual Coverage',
          'Premium Quality Assurance',
          'VIP Response Time',
          'Real-time Reporting',
          'Strategic Account Management',
          'Custom Integration Support',
        ],
        callToAction: {
          target: '_blank',
          text: 'Contact Us',
          href: '#contact',
        },
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title='Frequently Asked Questions'
    items={[
      {
        title: 'What languages do you support?',
        description:
          'We offer support in multiple languages including English, Arabic, French, Spanish, and more. Our multilingual team ensures effective communication with your global customer base.',
      },
      {
        title: 'How do you maintain quality standards?',
        description:
          'We implement rigorous quality assurance processes, regular training programs, and performance monitoring to maintain consistently high service standards.',
      },
      {
        title: 'Can you scale operations during peak seasons?',
        description:
          'Yes, we offer flexible scaling options to accommodate seasonal peaks and business growth. Our resource planning ensures smooth handling of varying support volumes.',
      },
      {
        title: 'How do you handle data security?',
        description:
          'We follow industry-best security practices and compliance standards to protect your business and customer data. Our systems are regularly audited for security.',
      },
      {
        title: 'What are your operating hours?',
        description:
          'We provide 24/7 support coverage across all time zones, ensuring your customers receive assistance whenever they need it.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    id='contact'
    title='Get in Touch'
    subtitle='Ready to transform your customer support? Contact us to discuss how we can help your business.'
    items={[
      {
        title: 'Email us',
        description: 'Send us an email at contact@cxpertseg.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Call us',
        description: 'Call us at +20 123 456 7890',
        icon: 'tabler:phone',
      },
      {
        title: 'Visit us',
        description: 'Find us at Smart Village, Cairo, Egypt',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id='blog'
    title='Latest from Our Blog'
    information={`Stay updated with our latest insights on customer support trends, best practices, and industry news.`}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Now',
        href: '#contact',
        target: '_blank',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot='title'> Ready to Transform Your Customer Support? </Fragment>

    <Fragment slot='subtitle'> Contact us today to discuss how we can help elevate your customer experience. </Fragment>
  </CallToAction>
</Layout>
